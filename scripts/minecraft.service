[Unit]
Description=Minecraft Bedrock Server
Wants=network-online.target
After=network-online.target

[Service]
Type=forking
User=minecraft
Group=minecraft
ExecStart=/bin/zsh /opt/minecraft-bedrock-server/start_server.sh
ExecStop=/bin/zsh /opt/minecraft-bedrock-server/stop_server.sh
WorkingDirectory=/opt/minecraft-bedrock-server
Restart=always
TimeoutStartSec=600

[Install]
WantedBy=multi-user.target